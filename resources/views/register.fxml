<Pane minHeight="-Infinity" minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0" stylesheets="/style.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="counterfeiters.views.RegisterView">
   <children>
      <VBox alignment="CENTER" layoutX="710.0" layoutY="335.0" prefHeight="500.0" prefWidth="500.0">
         <children>
            <TextField fx:id="username" alignment="CENTER" promptText="Username">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
            <PasswordField fx:id="password" alignment="CENTER" promptText="Password">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </PasswordField>
            <PasswordField fx:id="passwordCheck" alignment="CENTER" onKeyPressed="#keyPressed" promptText="Password">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </PasswordField>
            <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#pressRegister" prefWidth="500.0" styleClass="green-button" text="Register" textAlignment="CENTER" textFill="WHITE">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Button>
            <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#backToMenu" prefWidth="500.0" styleClass="blue-button" text="Back to Login" textAlignment="CENTER" textFill="WHITE">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Button>
            <Text fx:id="textField" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0">
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Text>
         </children>
      </VBox>
      <ImageView fx:id="muteButton" fitHeight="40.0" fitWidth="40.0" layoutX="941.0" layoutY="672.0" onMouseClicked="#pressMute" opacity="0.5" pickOnBounds="true" preserveRatio="true">
         <viewport>
            <Rectangle2D />
         </viewport>
         <image>
            <Image url="@/icons/mute-button.png" />
         </image>
      </ImageView>
   </children>
</Pane>
